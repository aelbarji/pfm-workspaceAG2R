body{
	background-color : #D3CBC5;
    font-family: "Arial", "Helvetica",Verdana, sans-serif;
    color: white;
    text-align : center;
}

.loginTop {
	position: fixed;
	top: 100px;
	margin: 0 0 0 -5%;
	height:	18px;
	width: 110%;
	background-color: #F47920;
	border-top: 5px solid white;
	border-bottom: 5px solid white;
}

.login {
	width: 110%;
	margin: 120px 0 0 -5%;
	padding: 60px 0 60px 0;
	border: none;
	background-color: #7E6B61;
}

.loginBottom {
	margin: 0 0 0 -5%;
	height:	18px;
	width: 110%;
	background-color: #F47920;
	border-top: 5px solid white;
	border-bottom: 5px solid white;
}

.error{
	position:absolute;
	top: 240px;
	width: 110%;
	margin-left:-5%;
	font-size: 100%;
	text-align: center;
	color: #FF9900;
}

.encadreLoginForm{
	border: 3px solid #FFA500;
	border-collapse:collapse;
	margin-left: auto; 
 	margin-right: auto;
 	padding: 30px;
}

.loginForm{
    width: 600px;
    margin-left: auto; 
 	margin-right: auto; 
 	margin-top : 30px;
 	margin-bottom : 30px;
}

.innerLoginForm{
	width: 450px;
    margin-left: auto; 
 	margin-right: auto; 
	border: 0;
}

#errormessage{
    text-align: center;
    font-size: 120%; 
    font-weight: bold;
}

li{
    list-style-type: none;
    margin-left:-4%;
}

h1{
    font-size: 220%;
    text-align: center;
    padding: 0 0 25px 0;
    text-transform: uppercase;
}

h2{
    font-size: 120%;
    text-align: center;
}

.center{
	text-align: center;	
}

.firstline{
    height: 50px;
}

.leftCell{
	width: 30%;
}
