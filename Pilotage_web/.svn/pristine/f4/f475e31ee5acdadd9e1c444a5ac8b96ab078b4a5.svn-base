}

.infopopup, .errorpopup{
	width: auto;
	margin-left:auto;
	margin-right: auto;
	font-size: 90%;
	font-weight: bold;
	text-align: center;
}

.info{
	position:absolute;
	top: 150px;
	width: 99%;
	margin-left:auto;
	margin-right: auto;
	font-size: 100%;
	font-weight: bold;
	text-align: center;
	color: green;
}

