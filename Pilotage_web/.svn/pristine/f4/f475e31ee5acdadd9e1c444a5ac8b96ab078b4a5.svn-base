}
select#idFichier {
	width:1000px;
}

/********************** Tableaux *********************/
.tabFilter3Col {
	width: 35%;
	margin-left: auto; 
 	margin-right: auto;
 	clear: both; 
}

.tabFilter4Col {
	width: 1000px;
	margin-left: auto; 
 	margin-right: auto; 
}

.contentTable{
	width: auto;
	margin-left: auto;
	margin-right: auto;
	padding: 0 60px 0 120px;
	display: block;
}

.contentTableRight{
	position: relative;
	float: right;
	display: inline-block;
	width: 49%;
}

.contentTableLeft{
	position: relative;
	float: left;
	display: inline-block;
	width: 49%;
}

.contentTableBottom{
	padding-top: 1em;
	clear:	both;
}

.dataTable, .dataTableChecklist, .dataTableAstreintes, .dataTableAstreinteHistorique{
	width: 100%;
	border-collapse:collapse;
	padding:0px;
	margin-right: auto;
	margin-left: auto;
 	border-style: solid;
 	border-color: black;
 	border-width: 1px;
}

.titreTable {
	text-align: center;
	margin-top: 2em;
}

.titreColonne, .titreColonne a {
	background-color: #414141;
	color: white;
	text-align: center;
	vertical-align : middle;
	font-weight: bold;
	height: 2em;
	border-color: black;
}

.dataTable>tbody>tr{
	background-color: #ffdeef;
	color: black;
}

.dataTable>tbody>tr:hover, .dataTableChecklist>tbody>tr:hover, .dataTableAstreintes>tbody>tr:hover, .dataTableAstreinteHistorique>tbody>tr:hover{
	background-color: #d7d7d7;
	color: black;
}

.dataTable>tbody>tr:nth-child(odd){
	background-color: #ffdeef;
	color: black;
}

.dataTable>tbody>tr:nth-child(even){
	background-color: #ffeff7;
	color: black;
}

.dataTable>tbody>tr:nth-child(odd):hover{
	background-color: #d7d7d7;
	color: black;
}

.dataTable>tbody>tr:nth-child(even):hover{
	background-color: #d7d7d7;
	color: black;
}

.oddRow{
	background-color: #ffdeef;
	color: black;
}

.evenRow{
	background-color: #ffeff7;
	color: black;
}

.oddRow:hover{
	background-color: #d7d7d7;
	color: black;
}

.evenRow:hover{
	background-color: #d7d7d7;
	color: black;
}


