@CHARSET "ISO-8859-1";

/***************** Zones *****************/
body {
	font-family: "Arial", "Helvetica",Verdana, sans-serif;
	font-size: 14px;
	color: black;
}

.questionBorder{
	background-color: orange;	
}

.content{
	vertical-align: top;
	text-align: center;
	margin-left: 50px;
}

.menuContent{
	width: 80px;
}

.titleContent{
	height: 35px;	
}

.headerContent{
	clear: both;
	height: 180px
}

.plusDiv{
	width : 100%;
}

.titreCenter{
	font-size: 16px;
	text-align:center;
}

/***************** Titre des pages *****************/
.titleTop {
	position: absolute;
	top: 110px;
	left: 0px;
	
	height: 35px;
	width: 100%;
	
	border: none;
	line-height: 35px;
	
	background-color: #8c014c;
	color: white;
	text-align:center;
	font-size: 16px;
	font-weight : bold;
}

.titleTop #pickDate {
	display: none;
}

.titleTopRight{
	text-align:right;
	float: right;
	display: table;
	height : 100%;
	margin-right: 19px;
}
.titleTopRight p{
	display: table-cell;
	vertical-align: middle
	
}
/***************** Images *****************/
img {
	border: none;
	text-decoration: none;
	vertical-align: middle;
}

.icone, .iconeOption{
	border: none;
	text-decoration: none;
	vertical-align: middle;
	height: 16px;
	width: 16px;
}

.icone2 {
	border: none;
	text-decoration: none;
	vertical-align: middle;
	height: 18px;
	width: 18px;
}

.iconeOption {
	border: none;
	text-decoration: none;
	vertical-align: middle;
	height: 20px;
	width: 20px;
} 
.iconeOption26 {
	border: none;
	text-decoration: none;
	vertical-align: middle;
	height: 26px;
	width: 26px;
}

.listIcones{
	position: absolute;
	top: 100px; 
	left: 0px;
	
	height: 35px;
	width: 100%;
}

.plus{
	font-size: 90%;
	color: black;
	font-weight: bold;
	text-align: left;
	float: left;
}

.plusDroite{
	text-align: right;
	float: right;
}

.autoselect {
	width:320px;
	float:left;
}
.autoselectBouton {
	width:100px;
	height:100px;
	display:inline-block;
}

.AutoselectIcone {
	border: none;
	text-decoration: none;
	vertical-align: middle;
	height: 36px;
	width: 36px;
} 

/********************** Liens et boutons **********************/
a,a:link,a:visited,a:hover,a:active{
	text-decoration: none;
}

.mailto{
	color: inherit;
}

.pageSelected{
	color: red;	
}

.boutonRechercher, .boutonRetour, .boutonValider {
	display: inline-block;
	background-color: #8c014c;
	width: 110px;
	height: 20px;
	text-decoration: none;
	color: white;
	text-align: center;
	line-height: 20px;
	font-size: 0.9em;
	font-weight: bold;
	border: solid;
	border-width: 1px;
	border-color: silver;
}

.boutonValiderEtEnvoyer {
	display: inline-block;
	background-color: #8c014c;
	width: 160px;
	height: 20px;
	text-decoration: none;
	color: white;
	text-align: center;
	line-height: 20px;
	font-size: 0.9em;
	font-weight: bold;
	border: solid;
	border-width: 1px;
	border-color: silver;
}

.ajouter{
	vertical-align: middle;
	text-decoration: none;
	color: black;
}

.boutonPopupRetour, .boutonPopupValider, .boutonPopupFermer {
	display: block;
	background-color: black;
	width: 110px;
	height: 20px;
	text-decoration: none;
	color: white;
	text-align: center;
	line-height: 20px;
	font-size: 0.9em;
	font-weight: bold;
	border: solid;
	border-width: 1px;
	border-color: silver;
}

.boutonRight {
	text-align:	right;
}

/********************** Pagination *********************/
.pageLeft{
	float:left;
}
.pageCenter{
	float:left;
	width: 40%;
	margin-left: 30%;
	text-align:	center;
}
.pageRight{
	float:right;
}

/********************** Textes *********************/
.filtreString{
	top: 170px;
	width: auto;
	margin-left:auto;
	margin-right: auto;
	font-size: 90%;
	font-weight: bold;
	text-align: center;
